{
  "name": "app-task-tree-server",
  "version": "0.1.0",
  "description": "A simple nodejs task base app",
  "main": "index.js",
  "scripts": {
    "production": "pm2 start ./config/pm2.config.js",
    "start": "nodemon app.js",
    "dev": "nodemon --ignore test",
    "test": "jest --watchAll"
  },
  "keywords": [
    "base"
  ],
  "author": "kevin flynn",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^3.0.7",
    "body-parser": "^1.18.3",
    "content-filter": "^1.1.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^3.2.1",
    "jscs": "^3.0.7",
    "jsonwebtoken": "^8.5.1",
    "mailgun-js": "^0.22.0",
    "method-override": "^3.0.0",
    "morgan": "^1.9.1",
    "mysql": "^2.18.1",
    "pm2": "^3.5.1",
    "sanitizer": "^0.1.3",
    "ws": "^7.1.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "eslint": "^7.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^24.9.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.19.1",
    "request": "^2.88.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {},
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "mocha": true
        }
      }
    ]
  }
}
